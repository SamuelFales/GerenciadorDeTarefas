@model IEnumerable<TaskManager.Web.MVC.ViewModel.TaskViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Tarefas</h2>

<p>
    @Html.ActionLink("Criar nova", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TB_User)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TB_TaskStatus)
        </th>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TB_User.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TB_TaskStatus.status)
        </td>
      
        <td>
         
           
           @if (item.UserID == ViewBag.UserID || User.IsInRole("Master"))
           {
                @Html.ActionLink("Pré-requisitos e Dependência", "Index", "TaskList", new { @id = item.ID },null) 
            @Html.DisplayName(" | ")
            @Html.ActionLink("Editar", "Edit", new { id = item.ID }) 
            @Html.DisplayName(" | ")
            @Html.ActionLink("Deletar", "Delete", new { id = item.ID })
           }


        </td>
    </tr>
}

</table>
